#! /usr/bin/env bash

if [ "$1" == "VERBOSE=1" ] ; then
	echo "${CMAKE_CXX_COMPILER} ${CMAKE_CXX_FLAGS} -I. -I${CMAKE_INSTALL_PREFIX}/include -DFLEXI_DRIVER=$1 ${CMAKE_INSTALL_PREFIX}/share/flexi-standard.cc -o $deck.${CMAKE_SYSTEM_NAME} -L${CMAKE_INSTALL_PREFIX}/lib -lflexi"
	shift
fi

deck=`echo $1 | sed 's,\.cc,,g'`

${CMAKE_CXX_COMPILER} ${CMAKE_CXX_FLAGS} -I. -I${CMAKE_INSTALL_PREFIX}/include -DFLEXI_DRIVER=$1 ${CMAKE_INSTALL_PREFIX}/share/flexi-standard.cc -o $deck.${CMAKE_SYSTEM_NAME} -L${CMAKE_INSTALL_PREFIX}/lib -lflexi
