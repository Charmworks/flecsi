#! /usr/bin/env bash

verbose=false
include_dirs=""

# Process command-line arguments
while [[ $# -gt 1 ]]
do
arg="$1"

case $arg in

	VERBOSE=1)
		verbose=true
	;;

	-i|--include)
      if [[ -z $include_dirs ]] ; then
			include_dirs="-I$2"
		else
			include_dirs="$include_dirs -I$2"
		fi
		shift
	;;
esac

shift # get next part

done

if [ "$verbose" = true ] ; then
	echo "${CMAKE_CXX_COMPILER} ${CMAKE_CXX_FLAGS} ${FLECSI_SCRIPT_COMPILE_DEFINES} ${FLECSI_SCRIPT_INCLUDE_DIRECTORIES} -I. $include_dirs ${CMAKE_INSTALL_PREFIX}/include -DFLECSI_DRIVER=$1 ${CMAKE_INSTALL_PREFIX}/share/flecsi/runtime/runtime_main.cc ${CMAKE_INSTALL_PREFIX}/share/flecsi/runtime/runtime_driver.cc -o $deck.${CMAKE_SYSTEM_NAME} -L${CMAKE_BINARY_DIR}/lib -lflecsi ${FLECSI_SCRIPT_RUNTIME_LIBRARIES}"
fi

# strip path and suffix to get output name
deck=`echo $1 | sed 's,\.h,,g;s,^.*\/,,'`

# compile input deck
${CMAKE_CXX_COMPILER} ${CMAKE_CXX_FLAGS} ${FLECSI_SCRIPT_COMPILE_DEFINES} ${FLECSI_SCRIPT_INCLUDE_DIRECTORIES} -I. $include_dirs -I${CMAKE_INSTALL_PREFIX}/include -DFLECSI_DRIVER=$1 ${CMAKE_INSTALL_PREFIX}/share/flecsi/runtime/runtime_main.cc ${CMAKE_INSTALL_PREFIX}/share/flecsi/runtime/runtime_driver.cc -o $deck.${CMAKE_SYSTEM_NAME} -L${CMAKE_BINARY_DIR}/lib -lflecsi ${FLECSI_SCRIPT_RUNTIME_LIBRARIES}
